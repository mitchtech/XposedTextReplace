        android:key="prefCatAbout"
        android:title="About/Support">

        <Preference
            android:key="prefAboutModule"
            android:summary="Developed by Michael Mitchell &#169; 2014. Tap to visit module support thread on XDA"
            android:title="Xposed Text Replacement" />

        <Preference
            android:key="prefAboutXposed"
            android:summary="Developed by rovo89. Tap to visit official Xposed Framework support thread on XDA"
            android:title="Xposed Framework" />

        <Preference
            android:key="prefDonatePaypal"
            android:summary="Support development with a PayPal donation"
            android:title="Donate" />

