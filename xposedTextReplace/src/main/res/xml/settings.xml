<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.jenzz.materialpreference.PreferenceCategory android:title="App Settings">
        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="prefSystemUi"
            android:summary="Modify text in Android System"
            android:title="System UI" />

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="prefAllApps"
            android:summary="Modify text in all other apps"
            android:title="Other Apps" />
    </com.jenzz.materialpreference.PreferenceCategory>

    <com.jenzz.materialpreference.PreferenceCategory android:title="Widgets to Replace Text">
        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="prefTextView"
            android:summary="Most standard static text labels, buttons, hints, and popups."
            android:title="TextViews" />

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="prefGlText"
            android:summary="Some text titles, notifications, and many other less standard text rendering widgets."
            android:title="GLES20Canvas" />

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="prefEditText"
            android:summary="Most single and multi-line user input text boxes and auto-completes.\nNOTE: Issues may occur with password entry or with apps that require specifically formatted inputs."
            android:title="EditTexts" />
    </com.jenzz.materialpreference.PreferenceCategory>


    <com.jenzz.materialpreference.PreferenceCategory
        android:key="prefCatMacroSettings"
        android:title="Macro Settings">

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="prefMoveCursor"
            android:summary="Move cursor to end of text after expansion"
            android:title="Move Cursor" />

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="prefIgnoreCase"
            android:summary="Make macros case insensitive (disregard capitalization)"
            android:title="Ignore Case" />

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="prefIgnorePassword"
            android:summary="Don't expand macros in password fields"
            android:title="Ignore Passwords" />
    </com.jenzz.materialpreference.PreferenceCategory>

    <com.jenzz.materialpreference.PreferenceCategory
        android:key="prefCatBackupRestore"
        android:title="Backup/Restore">

        <Preference
            android:key="prefExportMacros"
            android:summary="Tap to export/backup replacement list"
            android:title="Export Replacements" />

        <Preference
            android:key="prefImportMacros"
            android:summary="Tap to select file to import/restore replacements"
            android:title="Import Replacements" />

        <com.cgollner.unclouded.preferences.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="prefImportDebug"
            android:summary="Enable import/restore debug logging"
            android:title="Import Debug" />
    </com.jenzz.materialpreference.PreferenceCategory>

